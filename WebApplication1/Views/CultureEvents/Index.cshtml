@model IPagedList<WebApplication1.Models.CultureEvent>
@using PagedList;
@using PagedList.Mvc;
@using System.Text.RegularExpressions;

@{
    ViewBag.Title = "Index";
}

<h2>Culture events</h2>

<div class="row util">
    <div class="col-sm">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
    </div>
    <div class="col-sm">
        @Html.ActionLink("Delete |", "Delete", new { id = "{0}" }, new { @class = "btn btn-danger" })
    </div>


