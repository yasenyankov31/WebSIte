@model IPagedList<WebApplication1.Models.Users>
@using PagedList;
@using PagedList.Mvc;
@using System.Text.RegularExpressions;

@{
    ViewBag.Title = "Index";
}

<h2>Tourism</h2>
<h3>@TempData["Message"]</h3>

<div class="row util">
    <div class="col-sm">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })
    </div>
    <div class="col-sm">
        @Html.ActionLink("Delete", "Delete", new { ids = "{0}" }, new { @class = "btn btn-danger" })
    </div>

</div>
<table id="table"
       data-toggle="table"
       data-height="460"
       data-click-to-select="true">
    <thead>
        <tr>
            <th data-field="state" data-checkbox="true"></th>
            <th>
                @Html.DisplayNameFor(model => model.First().Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Role)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

        <tr id="@item.Id">
            <td>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <div class="col">
                    <div class="row-sm">
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    </div>
                    <div class="row-sm">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn edit btn-primary" })
                    </div>
                </div>

            </td>
        </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model, i => Url.Action("Index", "SearchForVolunteers", new { i, search = Request.QueryString["search"] }))
